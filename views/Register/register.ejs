<%- layout("/layout/boilerplate") %>
    <link rel="stylesheet" href="css/style.css">
    <div class="card mx-auto mt-4">
        <div class="card-body">
            <h1 class="text-center">Registration Form</h1>
            <form action="/register" method="POST">
                <div class="form-group row">
                    <label for="firstName" class="col-12 col-form-label text-left">First Name</label>
                    <div class="col-12">
                        <input type="text" name="fname" class="form-control" id="firstName"
                            placeholder="john" required="true">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="lastName" class="col-12 col-form-label text-left">Last Name</label>
                    <div class="col-12">
                        <input type="text" name="lname" class="form-control" id="lastName"
                            placeholder="smith" required="true">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="staticEmail" class="col-12 col-form-label text-left">Email</label>
                    <div class="col-12">
                        <input type="email" name="email" class="form-control" id="inputPassword"
                            placeholder="john@smith.com" required="true">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-12 col-form-label text-left">Password</label>
                    <div class="col-12">
                        <input type="password" name="password" class="form-control" id="inputPassword"
                            placeholder="Password" required="true">
                    </div>
                </div>
                <div class="d-flex">
                    <label for="" class="col-form-label text-left">Role</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="role" value="admin" name="flexRadioDefault" id="flexRadioDefault1">
                        <label class="form-check-label" for="flexRadioDefault1">
                            Admin
                        </label>
                    </div>
                    <div class="form-check mx-5">
                        <input class="form-check-input" type="radio" name="role" value="user" name="flexRadioDefault" id="flexRadioDefault2" checked>
                        <label class="form-check-label" for="flexRadioDefault2">
                            User
                        </label>
                    </div>
                </div>
                <button class="btn btn-primary mt-3">Submit</button>
            </form>
        </div>
    </div>